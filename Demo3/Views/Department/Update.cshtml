@model DepartmentViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>


<form asp-action="Update">
    <div  asp-validation-summary="All"></div>
    <div class=" form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label class="col-form-label" asp-for="DateofCreation"></label>
        <input asp-for="DateofCreation" class="form-control" />
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
    

</form>

