@model DepartmentViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department </h1>
<br />
<br />


<form  asp-action="Create" method="post">

    <div class=" form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control"  />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label class="col-form-label" asp-for="Name"></label> 
        <input asp-for="Name" class="form-control "  />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label class="col-form-label" asp-for="DateofCreation"></label>
        <input asp-for="DateofCreation" class="form-control"  />
    </div>



    <input type="submit" value="submit" class="btn btn-primary"/>
    <a asp-action="Index" class="btn btn-light">Back To List</a>    


</form>



