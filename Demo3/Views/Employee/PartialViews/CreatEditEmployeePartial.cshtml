@model EmployeeViewModel
@inject IUnitOfWork _unitOfWork
@{
    //var departments = new SelectList(ViewData["DeptRepo"] as IEnumerable<Department>,nameof(Department.Id),nameof(Department.Name));

    var departments = new SelectList(_unitOfWork.DepartmentRepository.GetAll(), nameof(Department.Id), nameof(Department.Name));

}    

<div class=" form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class=" form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class=" form-group">
    <label class="col-form-label" asp-for="Adresss"></label>
    <input asp-for="Adresss" class="form-control" />
    <span asp-validation-for="Adresss" class="text-danger"></span>
</div>
<div class=" form-group">
    <label class="col-form-label" asp-for="Mail"></label>
    <input asp-for="Mail" class="form-control" />
</div>
<div class=" form-group">
    <label class="col-form-label" asp-for="Phone"></label>
    <input asp-for="Phone" class="form-control" />
</div>
<div class=" form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
</div>
<div class=" form-check">
    <input asp-for="IsActive" class="form-check-input" />
    <label class="col-form-label" asp-for="IsActive"></label>

</div>


<div class=" form-group">
    <label class="col-form-label" asp-for="DepartmentId"></label>
    <select  class=" form-control" asp-for="DepartmentId" asp-items="@departments">
        <option value="@null">--Select Department--</option>
    </select>

</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input  asp-for="Image" class="form-control-file" />
   

</div>